{
  "openapi": "3.0.3",
  "info": {
    "title": "My SvelteKit API",
    "version": "1.0.0",
    "description": "API documentation for all endpoints"
  },
  "paths": {
    "/api/create-account": {
      "post": {
        "summary": "Tạo tài khoản mới",
        "tags": ["Account"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string", "example": "nguyen123" },
                  "email": { "type": "string", "example": "nguyen@example.com" },
                  "password": { "type": "string", "example": "mypassword" }
                },
                "required": ["username", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tạo tài khoản thành công",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Account created successfully" }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Lấy thông tin tài khoản",
        "tags": ["Account"],
        "responses": {
          "200": {
            "description": "Thành công",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "type": "string", "example": "Hello World" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
